{
  "name": "a-todo-server",
  "version": "0.2.0",
  "private": true,
  "engines": {
    "node": ">=18.16.1",
    "yarn": ">=1.22.19"
  },
  "repository": "https://github.com/goldentrash/A-ToDo-Server.git",
  "author": "goldentrash <startoflateness@gmail.com>",
  "scripts": {
    "prepare": "husky install",
    "start": "concurrently \"tsc --watch\" \"tsc-alias --watch\" \"node --watch ./bin/www\"",
    "profile": "script/profile.sh doctor",
    "profile:io": "script/profile.sh bubbleprof",
    "profile:cpu": "script/profile.sh flame",
    "test": "script/test_e2e.sh",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "build": "yarn build:dist && yarn build:image",
    "build:dist": "tsc && tsc-alias",
    "build:image": "docker build --tag goldentrash/a-todo-server:latest .",
    "postbuild": "docker push goldentrash/a-todo-server",
    "update:image": "script/update_image.sh"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "debug": "~2.6.9",
    "dotenv": "^16.3.1",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^9.0.1",
    "knex": "^2.5.1",
    "morgan": "~1.9.1",
    "mysql2": "^3.5.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/mysql": "^2.15.21",
    "@types/node": "^20.4.0",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "newman": "^5.3.2",
    "prettier": "^3.0.0",
    "prettier-plugin-sh": "^0.13.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  }
}
